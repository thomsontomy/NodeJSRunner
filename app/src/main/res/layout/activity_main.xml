<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextJSCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="@string/js_code"
        app:layout_constraintBottom_toTopOf="@+id/buttonStartWithCode"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonStartWithCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_with_code"
        app:layout_constraintBottom_toTopOf="@+id/buttonStartWithResoureFile"
        app:layout_constraintEnd_toEndOf="@+id/buttonStartWithResoureFile"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/buttonStartWithResoureFile"
        app:layout_constraintTop_toBottomOf="@id/editTextJSCode"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonStartWithResoureFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_with_resource_file"
        app:layout_constraintBottom_toTopOf="@+id/buttonStartWithResourceFolder"
        app:layout_constraintEnd_toEndOf="@+id/buttonStartWithResourceFolder"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/buttonStartWithResourceFolder"
        app:layout_constraintTop_toBottomOf="@+id/buttonStartWithCode" />

    <Button
        android:id="@+id/buttonStartWithResourceFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_with_resource_folder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStartWithResoureFile" />

</androidx.constraintlayout.widget.ConstraintLayout>